<div id="start">
  <% if current_user %>

    <h4><%= image_tag("logo_large.png", size: '75x75') %></h4>
    <div class="row">
      <h4>Go to...</h4>
      <div class="large-12 columns center">
          <%= link_to "My Courses' Events", suggested_path, class: 'button secondary cal-blue fixed-width' %><br>
          <%= link_to "Events I Created", my_events_path, class: 'button secondary cal-gold fixed-width' %><br>
          <%= link_to "Events I'm Attending", attending_path, class: 'button secondary cal-blue fixed-width' %><br>
        </ul>
      </div>
    </div>

    <h4>I want to...</h4>
    <%= link_to 'Create an Event', new_event_path, class: "button secondary cal-gold fixed-width" %><br>
    <form action="<%= events_path %>" method="get" >
      <div class="input-append">
        <%= text_field_tag :q, params[:q], autofocus: "autofocus", id: "search_field", placeholder: "Search by class or event" %>  
        <%= submit_tag "Search", name: nil, class: 'button secondary search_button cal-blue' %>
      </div>
    </form>
    <% else %>
    <h4>Calaborate makes it super simple to create and search for study groups.</h4>
    <%= image_tag("logo_large.png", size: '240x240') %><br>
    <%= link_to "/auth/facebook", id: "sign_in" do %>
      <%= image_tag("fbconnect.png") %>
    <% end %>

    <% end %>

</div>


<script type="text/javascript">

  $('#search_field').autocomplete({
    minLength: 2,
    delay: 500,
    source: '/autocomplete_courses.js'
  });

</script>